<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Video1Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:title="抖音"
        app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:background="@drawable/radiogroup_bg"
        android:alpha="0.6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_above="@+id/img_take">
        <RadioButton
            android:id="@+id/ra_biglow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textSize="15dp"
            android:checked="true"
            android:layout_height="match_parent"
            android:textColor="@color/txt_color"
            android:background="@drawable/txt_bg"
            android:text="极慢"/>
        <RadioButton
            android:id="@+id/ra_low"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/txt_color"
            android:background="@drawable/txt_bg"
            android:layout_height="match_parent"
            android:text="慢"/>
        <RadioButton
            android:id="@+id/ra_standard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/txt_color"
            android:background="@drawable/txt_bg"
            android:layout_height="match_parent"
            android:text="标准"/>
        <RadioButton
            android:id="@+id/ra_fast"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/txt_color"
            android:background="@drawable/txt_bg"
            android:layout_height="match_parent"
            android:text="快"/>
        <RadioButton
            android:id="@+id/ra_bigfast"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/txt_color"
            android:background="@drawable/txt_bg"
            android:layout_height="match_parent"
            android:text="极快"/>
    </RadioGroup>

    <hanlonglin.com.videoapp.view.CircleShape
        android:id="@+id/img_take"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>